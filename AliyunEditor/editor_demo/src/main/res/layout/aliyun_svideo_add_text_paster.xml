<?xml version="1.0" encoding="utf-8"?>
<com.aliyun.demo.widget.AliyunPasterWithTextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duanqu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    duanqu:layout_anchorGravity="center"
    android:layout_height="match_parent">

    <com.aliyun.demo.widget.AutoResizingTextView
        android:id="@android:id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:gravity="center"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:textColor="@android:color/white"
        duanqu:strokeColor="#FFff0000"
        duanqu:strokeJoinStyle="miter"
        duanqu:strokeWidth="10dp" />

</com.aliyun.demo.widget.AliyunPasterWithTextView>
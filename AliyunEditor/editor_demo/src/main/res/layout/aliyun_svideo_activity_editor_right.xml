<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/alivc_svideo_title_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tab_filter"
            style="@style/alivc_svideo_effect_tab_right"
            android:drawableTop="@mipmap/alivc_svideo_icon_beauty_face"
            android:text="@string/tab_filter" />

        <TextView
            android:id="@+id/tab_effect_font"
            style="@style/alivc_svideo_effect_tab_right"
            android:drawableTop="@drawable/lrc_show_selector"
            android:text="@string/show_lrc" />

        <TextView
            android:id="@+id/tab_music_voice"
            style="@style/alivc_svideo_effect_tab_right"
            android:drawableTop="@mipmap/music_video_icon"
            android:text="@string/tab_music_voice" />
    </LinearLayout>

</RelativeLayout>
